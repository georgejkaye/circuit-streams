{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile ocaml",
        "type": "shell",
        "command": [
          "${workspaceFolder}/.vscode/compile.sh",
          "${relativeFile}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run ocaml",
        "type": "shell",
        "command": [
          "${workspaceFolder}/.vscode/run.sh",
          "${relativeFile}"
        ],
        "problemMatcher": []
      }
    ]
}